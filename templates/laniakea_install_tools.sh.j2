#fi

stop_galaxy () {
echo  "stopping galaxy";
$GALAXY_RUNSH_DIR/run.sh stop;
#kill -9 `cat $GALAXY_PID`;
#remove config file pid and log file
rm $GALAXY_PID $GALAXY_LOG;
sudo systemctl start galaxy;
sudo systemctl start nginx;

}

if [ $1 == "start" ]; then 
start_galaxy 
elif [ $1 == "install" ]; then
install_tools $1 $2 $3
elif [ $1 == "stop" ]; then
stop_galaxy
fi
